<Page x:Class="KingITGalishnikov.Captcha"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KingITGalishnikov"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Captcha" Height="350" Width="525" Background="{x:Null}">

    <Grid Background="{x:Null}" Visibility="Visible">

        <TextBox Height="53" HorizontalAlignment="Left" FontSize="36" Foreground="Black"   Margin="86,105,0,0" Name="textBox1" VerticalAlignment="Top" Width="202" Background="{x:Null}" FontStretch="UltraCondensed"></TextBox>
        <TextBox Height="53" HorizontalAlignment="Left" FontSize="36" Margin="86,170,0,0" Name="textBox2" VerticalAlignment="Top" Width="202" Background="{x:Null}"></TextBox>
        <Button Content="Обновить" Height="31" HorizontalAlignment="Left" Margin="327,116,0,0" Name="Reload" VerticalAlignment="Top" Width="79" Click="Reload_Click" />
        <Button Content="Подтвердить" Height="31" HorizontalAlignment="Left" Margin="138,251,0,0" Name="Confirm" VerticalAlignment="Top" Width="98" Click="Confirm_Click" />

    </Grid>
</Page>
